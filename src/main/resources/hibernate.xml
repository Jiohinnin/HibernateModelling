<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/moviedb</property>
        <property name="connection.username">Jiohinnin</property>
        <property name="connection.password">Jiohinnin</property>
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="com.sda.hibernate.entities.Movie"/>
        <mapping class="com.sda.hibernate.entities.Actor"/>
        <mapping class="com.sda.hibernate.entities.Genre"/>
    </session-factory>
</hibernate-configuration>
